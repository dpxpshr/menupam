<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kh.toy.shop.model.repository.ShopRepository">

	<update id="updateShop" >
		update tb_shop 
		 	<set>
		 		<if test="shopTell != ''">
		 			shop_tell = #{shopTell}
		 		</if>
		 		<if test="shopPackAble != null">
		 			,shop_pack_able = #{shopPackAble} 
		 		</if>
		 		<if test="shopTableCount != 0">
		 			,shop_table_count = #{shopTableCount} 
		 		</if>
		 	</set>
		 where member_id = #{memberId}
	</update>
	
	<select id="selectCategoryList" resultType="menuCategory">
		select shop_idx, menu_category_name, menu_category_idx
		from tb_shop 
		left outer join tb_menu_category using(shop_idx)
		where member_id = #{memberId}
	</select>
	
</mapper>